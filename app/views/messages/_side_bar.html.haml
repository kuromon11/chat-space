.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__edit  
          = link_to new_group_path do
            = icon('fas', 'edit', class: "icon")
        %li.top-items__icons__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "icon")
            
  .side-bar__groups-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group" do
          %p.group__name
            TECH::EXPERT
          %p.group__new-message
            まだメッセージはありません
